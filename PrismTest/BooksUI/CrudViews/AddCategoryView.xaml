<Window x:Class="BooksUI.CrudViews.AddCategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksUI.CrudViews"
        mc:Ignorable="d"
        Title="AddCategoryView" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock>Enter Category Name</TextBlock>
            <TextBox Name="categoryName" Height="25" Width="200" Margin="5"></TextBox>
            <Button Name="addCategory" Height="25" Width="100" HorizontalAlignment="Left" Margin="5" Click="addCategory_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.15,0.327" StartPoint="1.14,0.559">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Teal" Offset="0"/>
                    </LinearGradientBrush>
                </Button.Background> Add
            </Button>
        </StackPanel>

    </Grid>
</Window>
